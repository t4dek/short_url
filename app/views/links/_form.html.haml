= form_for(@link) do |f|
  - if @link.errors.any?
    #error_explanation
      %h2
        = pluralize(@link.errors.count, "error")
        prohibited this link from being saved:
      %ul
        - @link.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :given_url
    %br/
    = f.text_field :given_url
  .field
    = f.label :uniq_key
    %br/
    = f.text_field :uniq_key
  .actions
    = f.submit
