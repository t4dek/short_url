= form_for(@link) do |f|
  - if @link.errors.any?
    #error_explanation
      %h2
        = pluralize(@link.errors.count, "error")
        appeared while checking you link:
      %ul
        - @link.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :given_url
    %br/
    = f.text_field :given_url
  .actions
    = f.submit
